                <div class="form">
                    <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                    @using (Html.BeginForm("Index", "ContactUsController", FormMethod.Post))
                    {
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <!-- <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars">-->
                            @Html.TextBoxFor(m => m.Name)
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <!-- <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email">-->
                            @Html.TextBoxFor(m => m.EmailID)

                        </div>
                        </div>
                    <div class="form-group mt-3">
                        <!--<input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>-->
                        @Html.TextBoxFor(m => m.Subject)

                    </div>
                    <div class="form-group mt-3">
                        <!--<textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>-->
                        @Html.TextBoxFor(m => m.Message)

                    </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button type="submit" onclick="location.href='@Url.Action("Index", "ContactUsController")'">Send Message</button></div>
                    }
                    </form>
                </div>

